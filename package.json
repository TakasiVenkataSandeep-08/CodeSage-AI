{
  "name": "codesenseai",
  "displayName": "CodeSenseAI",
  "description": "CodeSenseAI is a powerful Visual Studio Code extension that leverages Google Bard AI to provide intelligent code refactoring, writing assistance, and instant answers to coding doubts.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codesenseai_chat",
          "title": "CodeSense AI",
          "icon": "resources/icons/chat-icon.svg"
        }
      ]
    },
    "views": {
      "codesenseai_chat": [
        {
          "type": "webview",
          "id": "codesenseai.openChat",
          "name": "CodeSense AI"
        }
      ]
    },
    "commands": [
      {
        "command": "codesenseai.openChat",
        "title": "Open Chat"
      }
    ],
    "permissions": [
      "webview"
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/node-fetch": "^2.6.4",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.2"
  },
  "dependencies": {
    "core-js-pure": "^3.31.0",
    "langchain": "^0.0.78",
    "node-fetch": "^2.6.12",
    "openai": "^3.3.0"
  }
}